{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./src/",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
